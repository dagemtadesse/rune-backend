// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Vote {
  UP_VOTE
  DOWN_VOTE
  NONE
}

model User {
  id              Int               @id @default(autoincrement())
  fullname        String
  handle          String?           @unique
  createdAt       DateTime          @default(now())
  email           String            @unique
  avatar          String?
  mimeType        String?
  password        String
  role            Role              @default(USER)
  posts           Post[]
  pinnedChannels  ChannelBookmark[]
  comments        Comment[]
  channels        Channel[]
  postReactions   PostReaction[]
  commentReaction CommentReaction[]
}

model ChannelBookmark {
  channel   Channel @relation(fields: [channelId], references: [id], onDelete: SetNull)
  channelId Int

  user   User @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId Int

  @@id([userId, channelId])
}

model Channel {
  id          Int               @id @default(autoincrement())
  name        String            @unique
  logo        String?
  mimeType    String?
  description String
  address     String
  email       String            @unique
  verified    Boolean           @default(false)
  createAt    DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  pinnedBy     ChannelBookmark[]

  author   User? @relation(fields: [authorId], references: [id], onDelete: SetNull)
  authorId Int?

  posts Post[]

  parentChannel   Channel? @relation("channelHeirarchy", fields: [parentChannelId], references: [id], onDelete: Cascade)
  parentChannelId Int?

  subChannels Channel[] @relation("channelHeirarchy")

}

model Comment {
  id      Int    @id @default(autoincrement())
  content String

  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  author   User? @relation(fields: [authorId], references: [id], onDelete: SetNull)
  authorId Int?

  post   Post? @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId Int?

  parentComment   Comment? @relation("commentHeirarchy", fields: [parentCommentId], references: [id], onDelete: Cascade)
  parentCommentId Int?

  subCommnets Comment[]         @relation("commentHeirarchy")
  reactions   CommentReaction[]
}

model Post {
  id       Int     @id @default(autoincrement())
  title    String
  text     String
  mediaUrl String?
  mimeType String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  comments Comment[]

  author   User? @relation(fields: [authorId], references: [id], onDelete: SetNull)
  authorId Int?

  channel   Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  channelId Int

  reactions PostReaction[]
}

model PostReaction {
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId Int

  user   User @relation(fields: [userId], references: [id])
  userId Int
  vote   Vote @default(NONE)

  @@unique([userId, postId])
}

model CommentReaction {
  comment   Comment @relation(fields: [commentId], references: [id])
  commentId Int

  user   User @relation(fields: [userId], references: [id])
  userId Int

  vote Vote @default(NONE)
  @@unique([userId, commentId])
}
